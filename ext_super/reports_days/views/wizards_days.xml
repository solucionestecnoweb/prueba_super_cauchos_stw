<odoo>

    <data noupdate="0">
        <record id="wizard_days_report" model="ir.ui.view">
            <field name="name">Average Days Report Wizard</field>
            <field name="model">days.report</field>
            <field name="arch" type="xml">
                <form string="Average Days Report">
                    <field invisible="1" name="state"/>
                    <div states="choose">
                        <group >
                            <group >
                                <field name="date_from" required="1"/>
                            </group>
                            <group >
                                <field name="date_to" required="1"/>
                            </group>
                        </group>
                    </div>
                    <div states="get">
                        <group>
                            <field name="name" colspan="4" invisible="1"/>
                            <field name="report" filename="name" colspan="4"/>
                        </group>
                    </div>
                    <footer states="choose">
                        <button name="generate_xls_report" string="Export XLS" type="object" class="oe_highlight" />
                        <button name="print_report" string="Export PDF" type="object" class="oe_highlight" />
                        <button name="show_days" string="Show Average Days" type="object" class="oe_highlight" />
                        <button special="cancel" string="Cancel" class="oe_highlight" />
                    </footer>
                    <footer states="get">
                        <button name="show_days" string="Show Average Days" type="object" class="oe_highlight" />
                        <button special="cancel" string="Cancel" class="oe_highlight" />
                    </footer>
                </form>
            </field>
        </record>
        <record id="action_days_report" model="ir.actions.act_window">
            <field name="name">Average Days Report</field>
            <field name="res_model">days.report</field>
            <field name="view_mode">form</field>
            <field name="view_id" ref="wizard_days_report"/>
            <field name="target">new</field>
        </record>

        <menuitem   name="Average Days" 
                    parent="reports_days.menu_reports"
                    id="days_report_menu" 
                    action="reports_days.action_days_report"
                    sequence="1"
                    />
    </data>

</odoo>