<odoo>

    <record id="wizard_street_days_report" model="ir.ui.view">
        <field name="name">Street Days Report Wizard</field>
        <field name="model">street_days.report</field>
        <field name="arch" type="xml">
            <form string="Street Days Report">
                <field invisible="1" name="state"/>
                <div states="choose">
                    <group >
                        <group >
                            <field name="date_from" required="1"/>
                        </group>
                        <group >
                            <field name="date_to" required="1"/>
                        </group>
                    </group>
                </div>
                <div states="get">
                    <group>
                        <field name="name" colspan="4" invisible="1"/>
                        <field name="report" filename="name" colspan="4"/>
                    </group>
                </div>
                <footer states="choose">
                    <button name="generate_xls_report" string="Export XLS" type="object" class="oe_highlight" />
                    <button name="print_report" string="Export PDF" type="object" class="oe_highlight" />
                    <button name="show_street_days" string="Show Street Days" type="object" class="oe_highlight" />
                    <button special="cancel" string="Cancel" class="oe_highlight" />
                </footer>
                <footer states="get">
                    <button name="show_street_days" string="Show Street Days" type="object" class="oe_highlight" />
                    <button special="cancel" string="Cancel" class="oe_highlight" />
                </footer>
            </form>
        </field>
    </record>
    <record id="action_street_days_report" model="ir.actions.act_window">
        <field name="name">Street Days Report</field>
        <field name="res_model">street_days.report</field>
        <field name="view_mode">form</field>
        <field name="view_id" ref="wizard_street_days_report"/>
        <field name="target">new</field>
    </record>

    <menuitem   name="Street Days" 
                parent="administration_module.admin_collection_menu"
                id="street_days_report_menu" 
                action="reports_days.action_street_days_report"
                sequence="30"
                />

</odoo>