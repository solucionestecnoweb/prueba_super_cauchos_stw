                <field name= "invoice_date_due" optional="show"/>
                <field name= "amount_total" string="Amount in Bs" sum="Total in Bs" optional="show"/>
                <field name= "currency_bs_id" string="Currency" optional="show"/>
                <field name= "rate" optional="show"/>
                <field name= "amount_currency" string="Amount in $" sum="Total in $" optional="show"/>
                <field name= "currency_usd_id" string="Currency" optional="show"/>
                <field name= "invoice_payment_state" optional="show"/>
                <field name= "payment_date" string="Payment Date" optional="show"/>
