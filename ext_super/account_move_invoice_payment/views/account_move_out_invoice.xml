<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- account.move.line tree view -->
    <record id="move_out_invoice_type_payment_view_tree" model="ir.ui.view">
        <field name="name">account.move.line.out.view.tree</field>
        <field name="model">account.move.line</field>
        <field name="arch" type="xml">
            <tree>
                <field name="move_id"/>
                <field name="date"/>
                <field name="journal_id"/>
                <field name="account_id"/>
                <field name="exp_date_today"/>
                <field name="delay_1_30"/>
                <field name="delay_31_60"/>
                <field name="delay_61_90"/>
                <field name="delay_91_120"/>
                <field name="delay_older"/>
                <field name="delay_total"/>
            </tree>
        </field>
    </record>

    <record id="action_move_out_invoice_type_payment" model="ir.actions.act_window">
        <field name="context">{'journal_type':'general', 'search_default_posted':1, 'search_default_receivable':1, 'search_default_group_by_partner':1, 'search_default_unreconciled':1}</field>
        <field name="name">Invoices</field>
        <field name="res_model">account.move.line</field>
        <field name="domain">[('display_type', 'not in', ('line_section', 'line_note')), ('move_id.state', '!=', 'cancel'), ('move_id.invoice_payment_state', '!=', 'paid'), ('move_id.type', 'in', ('out_invoice', 'entry')), ('move_id.journal_id.type', 'in', ('bank', 'sale')), ('amount_residual', '!=', 0)]</field>
        <field name="view_id" ref="move_out_invoice_type_payment_view_tree"/>
        <field name="view_mode">tree</field>
    </record>

    <menuitem
        id="account_move_invoice_payment_menu"
        name="Invoice Pending"
        sequence="1000"/>
    
    <menuitem
        id="customer_invoice_menu"
        name="Customers"
        parent="account_move_invoice_payment_menu"
        sequence="1"/>

    <menuitem
        id="customer_invoice_show_menu"
        name="Invoices"
        action="action_move_out_invoice_type_payment"
        parent="customer_invoice_menu"
        sequence="1"/>

</odoo>
