<odoo>
    <record id="view_form_suppliers" model="ir.ui.view">
        <field name="name">view.form.suppliers</field>
        <field name="model">account.payment</field>
        <field name="inherit_id" ref="account.view_account_payment_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field [@name='journal_id']" position="after">
                <field name="invoice_ids" widget="many2many_tags" attrs="{'invisible': [('partner_type', 'not in', 'supplier')]}" readonly="0" required="0" domain="[('type', 'in', ('out_invoice','in_invoice')), ('invoice_payment_state', '=', 'not_paid'), ('state', '=', 'posted'), ('partner_id', '=', partner_id)]"/>
            </xpath>
        </field>
    </record>
</odoo>