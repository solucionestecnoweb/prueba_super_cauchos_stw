<odoo>
    <data noupdate="0">
        <!-- Add you code here -->
        <!-- account.payment inherit form view -->
        <record id="view_account_payment_form_approvals_extend" model="ir.ui.view">
            <field name="name">account.payment.inherit.view.form</field>
            <field name="model">account.payment</field>
            <field name="inherit_id" ref="account.view_account_payment_form"/>
            <field name="arch" type="xml">
                <!-- Add your xpath here -->
                <xpath expr="//field[@name='state']" position="before">
                    <button string="Request Approval" name="approvals_request_conciliation" type="object" class="oe_highlight" states="draft"/>
                </xpath>
                <xpath expr="//field[@name='company_id']" position="after">
                    <field name="is_approved" string="Solicitud aprovada" readonly="1"/>
                    <field name="is_rejected" string="Solicitud rechazada" readonly="1"/>
                </xpath>
                <xpath expr="//button[@name='post']" position="attributes">
                    <attribute name="attrs">{'invisible': ['|', ('is_approved', '=', False), ('is_rejected', '=', True)]}</attribute>
                </xpath>
            </field>
        </record>
